{% extends 'base.html.twig' %}

{% block title %}Question index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <h1>Questions</h1>

            {% if 10 < questions|length %}
                <a class="float-right btn btn-success" href="{{ url('question_new') }}"><i class="fa fa-plus"></i> Add question</a>
            {% endif %}

            <div class="clearfix"></div>
            <br>

            {% if questions is not empty %}
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Question</th>
                        <th>Answers</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for question in questions %}
                        <tr>
                            <td>{{ question.questionText }}</td>
                            <td>{{ question.answers.count }}</td>
                            <td>
                                <a class="btn btn-warning" href="{{ path('question_edit', {'id': question.id}) }}">Edit</a>
                                {{ include('question/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="alert alert-primary">No entries found</div>
            {% endif %}
        </div>
    </div>
{% endblock %}
